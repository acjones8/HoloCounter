<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omegavesko.simplecounter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.omegavesko.simplecounter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.omegavesko.simplecounter.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.omegavesko.simplecounter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.omegavesko.simplecounter.MainActivity" />
        </activity>
        <activity
            android:name="com.omegavesko.simplecounter.SetStepActivity"
            android:label="@string/title_activity_set_step"
            android:parentActivityName="com.omegavesko.simplecounter.MainActivity"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.omegavesko.simplecounter.MainActivity" />
        </activity>
        <activity
            android:name="com.omegavesko.simplecounter.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>